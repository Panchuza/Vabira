{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "common/envs/*"
      },
      {
        "include": "mail/templates/**/*",
        "outDir": "./dist/src/"
      },
      {
        "include": "mail/images/**/*",
        "outDir": "./dist/src/"
      }
    ],
    "plugins": [
      "@nestjs/swagger"
    ]
  }
}